<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    style="@style/SCREEN"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:layout_marginLeft="15dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:cardCornerRadius="40dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/num"
            >
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="10+"
                android:background="#FF0000"
                android:textColor="@color/white"
                android:padding="5dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sok Sao"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_toLeftOf="@id/num"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_drop_down_24"
            android:layout_toRightOf="@+id/num"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/camera_alt_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/edit"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/edit"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/edit"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cover_angkorwat"
            android:scaleType="centerCrop"
            android:layout_marginBottom="44dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="180dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150sp"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="33dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/camera_alt_24"
                android:layout_gravity="center"
                android:background="#eeee"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26dp"
            android:layout_marginRight="239dp"
            app:cardCornerRadius="33dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/camera_alt_24"
                android:layout_gravity="center"
                android:background="#eeee"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        style="@style/TEXT"
        android:id="@+id/textFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@id/num"
        android:text="Sok"
        android:textSize="22dp"
        android:textStyle="bold" />
    <TextView
        style="@style/TEXT"
        android:id="@+id/textLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@id/num"
        android:text="Sav"
        android:textSize="20dp"
        android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="3.2k"
            android:textSize="19dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="friends"
            android:textSize="17dp" />
    </LinearLayout>
    <TextView
        style="@style/TEXT"
        android:id="@+id/textBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Love Football"
        android:layout_marginLeft="20dp"
        android:textSize="17dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="135dp"
            android:layout_height="40dp"
            app:cardCornerRadius="8dp"
            >
            <Button
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="10dp"
                android:text="+ Add to story"
                android:textSize="15dp"
                android:background="@color/design_default_color_primary" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="135dp"
            android:layout_height="40dp"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="10dp"
            >
            <Button
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="10dp"
                android:text="Add to story"
                android:textSize="15dp"
                android:background="#eeee"

                />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="10dp"
            >
           <ImageButton
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#808080"
               android:src="@drawable/arrow_drop_down_24"
               />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

       <ImageView
           style="@style/TEXT"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@drawable/badge_24"/>
        <TextView
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="student at "

            android:textSize="19dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            />
        <TextView
            style="@style/TEXT"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Royal university of Phnom penh"
            android:layout_marginLeft="1dp"
            android:textSize="17dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/camera"/>
        <TextView
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single"
            android:textSize="19dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/badge_24"/>
        <TextView
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See your About info"
            android:textSize="19dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/BUTTON"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:text="Edit public details"
            android:textSize="15dp"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>